<UserControl x:Class="Messenger.MessageAnother"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger"
             mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="10,10,100,10">
        <TextBlock x:Name="Another_Message_Name" Text="XXXXX" FontSize="13" Foreground="White"></TextBlock>
        <Border Margin="5" Padding="10" Background="#FF595959" CornerRadius="12">
            <TextBlock x:Name="Another_Message_Text" Text="ERROR" TextWrapping="Wrap" FontSize="15" TextAlignment="Left" HorizontalAlignment="Left" Foreground="White"/>
        </Border>
        <TextBlock x:Name="Another_Message_Time" Text="25:00" FontSize="13" Foreground="White"></TextBlock>
    </StackPanel>
</UserControl>
