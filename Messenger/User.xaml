<UserControl x:Class="Messenger.User"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Ellipse Width="57" Height="57">
            <Ellipse.Fill>
                <ImageBrush x:Name="Avatar"/>
            </Ellipse.Fill>
        </Ellipse>
        <StackPanel>
            <TextBlock x:Name="User_Name" Margin="10,0,0,0" FontSize="16" Foreground="White" Height="32"/>
            <TextBlock x:Name="Status" Margin="5,0,0,0" Foreground="White"  FontSize="13" Height="18" />
        </StackPanel>
    </StackPanel>
</UserControl>
